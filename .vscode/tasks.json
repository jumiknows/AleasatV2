{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Firmware",
            "type": "shell",
            "command": "./fw_build.sh ${input:platform}",
            "options": {
                "cwd": "${workspaceFolder}/obc-firmware"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/obc-firmware"
                ],
                "pattern": {
                    "regexp": "\"/usr/local/src/repo/obc-firmware(.*)\", line (\\d+): (info|warning|(?:|fatal |catastrophic )error): (\\((.*)\\) )?(.*)",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "code": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "San Antonio",
            "type": "shell",
            "command": "pipenv run python src/main.py",
            "options": {
                "cwd": "${workspaceFolder}/san-antonio"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "WSL Attach USB",
            "type": "shell",
            "command": "usbipd.exe wsl attach --busid ${input:busid} && usbipd.exe wsl list | sed '1p;$p;/${input:busid}/!d'",
            "problemMatcher": []
        },
        {
            "label": "WSL Detach USB",
            "type": "shell",
            "command": "usbipd.exe wsl detach --busid ${input:busid} && usbipd.exe wsl list | sed '1p;$p;/${input:busid}/!d'",
            "problemMatcher": []
        },
        {
            "label": "San Antonio (Windows from WSL) - experimental",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoProfile",
                        "-ExecutionPolicy",
                        "Bypass",
                        "-Command"
                    ]
                }
            },
            "command": "cd san-antonio; pipenv install; pipenv run python src/main.py",
            "isBackground": true,
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "platform",
            "type": "pickString",
            "description": "Select a hardware platform",
            "options": [
                "launchpad",
                "alea-v1"
            ],
            "default": "launchpad"
        },
        {
            "id": "busid",
            "type": "command",
            // Need to have the Task Shell Input extension installed:
            // https://marketplace.visualstudio.com/items?itemName=augustocdias.tasks-shell-input
            "command": "shellCommand.execute",
            "args": {
                // This ridiculous command (I can't believe I'm actually using perl) restructures the output of `usbipd.exe wsl list`
                // by pumping it through a perl regex-based substitution so that the Task Shell Input extension can parse it into
                // a collection of fields for the dropdown list
                "command": "usbipd.exe wsl list | perl -ne 'print if s/^(\\d+-\\d+)\\s+([a-f0-9]{4}:[a-f0-9]{4})\\s+([^\\s].+?)\\s+(Attached.*|Not attached.*|Shared.*|Not shared.*)$/\\1%%%\\3%%%\\2%%%\\4/'",
                "fieldSeparator": "%%%",
                "description": "Select the OBC USB serial device"
            }
        }
    ]
}
