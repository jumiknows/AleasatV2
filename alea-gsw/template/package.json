{
  "name": "@aleasat/template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "swc src  --strip-leading-paths --out-dir dist",
    "build:types": "yarn build",
    "test:unit": "mocha --no-warnings 'tests/unit/**/*.spec.ts'",
    "test:unit-coverage": "c8 yarn test:unit",
    "test:ci-unit": "c8 yarn test:unit --reporter mocha-junit-reporter",
    "test:types": "tsc --noEmit",
    "test:ci-copy-result-and-coverage": "shx mv test-results.xml ../../ && shx mv coverage ../../",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "lint:fix": "biome check --fix",
    "start": "node dist/server.js",
    "dev": "nodemon --exec node --no-warnings=ExperimentalWarning --loader ts-node/esm --loader @opentelemetry/instrumentation/hook.mjs --watch src src/server.ts",
    "prisma": "dotenvx run --convention=nextjs -- prisma",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@aleasat/utils": "*",
    "@opentelemetry/api": "^1.7.0",
    "@dotenvx/dotenvx": "^1.20.0",
    "@prisma/client": "^5.9.1",
    "@prisma/instrumentation": "^5.7.1",
    "cors": "^2.8.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "express": "^4.18.2",
    "express-openapi-validator": "^4.13.8",
    "prisma": "^5.9.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@aleasat/tsconfig": "*",
    "@aleasat/types": "*",
    "@biomejs/biome": "1.9.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/chai-as-promised": "^7",
    "@types/cors": "^2",
    "@types/express": "^4",
    "@types/express-serve-static-core": "^4.17.41",
    "@types/mocha": "^10",
    "@types/node": "^20.8.10",
    "@types/sinon": "^17",
    "@types/swagger-ui-express": "^4.1.6",
    "c8": "^9.1.0",
    "chai": "^5.0.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "nodemon": "^3.0.1",
    "shx": "^0.3.4",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}